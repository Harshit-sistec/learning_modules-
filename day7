<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Live Text Preview + Counter</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    textarea { width: 100%; height: 100px; }
    .counter { margin-top: 10px; font-weight: bold; }
    .preview { margin-top: 20px; padding: 10px; border: 1px solid #ccc; background: #f9f9f9; }
  </style>
</head>
<body>

  <h2>Type your message:</h2>
  <textarea id="inputText" placeholder="Start typing..."></textarea>
  <div class="counter">Characters: <span id="charCount">0</span></div>

  <h3>Live Preview:</h3>
  <div class="preview" id="livePreview"></div>

  <script>
    const input = document.getElementById('inputText');
    const charCount = document.getElementById('charCount');
    const livePreview = document.getElementById('livePreview');

    input.addEventListener('input', () => {
      const text = input.value;
      charCount.textContent = text.length;
      livePreview.textContent = text;
    });
  </script>

</body>
</html>
